       set(xrootd OFF CACHE BOOL "" FORCE)
+    else()
+      set(xrootd_versionnum ${xrdversnum})  # variable used internally
     endif()
   endif()
 endif()
@@ -578,6 +580,10 @@ if(builtin_xrootd)
     URL http://xrootd.org/download/v${xrootd_version}/xrootd-${xrootd_version}.tar.gz
