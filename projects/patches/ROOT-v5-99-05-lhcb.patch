diff --git a/net/CMakeLists.txt b/net/CMakeLists.txt
index 6aab949..0e52b5f 100644
--- net/CMakeLists.txt
+++ net/CMakeLists.txt
@@ -35,3 +35,7 @@ endif()
 if(davix)
    add_subdirectory(davix)
